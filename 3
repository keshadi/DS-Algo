int kthSmallest(int arr[], int l, int r, int k) {
    //code here
  int max = arr[0];
  for(int i=l;i<=r;i++){
    if(arr[i]>max)
    max = arr[i];
  }
  int bucket[max+1]={0};

  for(int i=l;i<=r;i++){
    bucket[arr[i]]=1;
  }

  for(int i=0;i<=max;i++){
    if(bucket[i]==1){
      k--;
    if(!k){
      return i;
  }
